{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/auth": {
      "post": {
        "summary": "Creates a new user",
        "tags": [
          "Registration"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "password_confirmation": {
                  "type": "string"
                }
              },
              "required": [
                "email",
                "password",
                "password_confirmation"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "user registered",
            "examples": {
              "application/json": {
                "status": "success",
                "data": {
                  "id": 1,
                  "provider": "email",
                  "uid": "jamaal@mante.info",
                  "allow_password_change": false,
                  "email": "jamaal@mante.info",
                  "created_at": "2019-06-27T13:52:59.469Z",
                  "updated_at": "2019-06-27T13:52:59.526Z",
                  "role": "user"
                }
              }
            }
          },
          "422": {
            "description": "invalid request",
            "examples": {
              "application/json": {
                "status": "error",
                "data": {
                  "id": null,
                  "provider": "email",
                  "uid": "",
                  "allow_password_change": false,
                  "email": "email",
                  "created_at": null,
                  "updated_at": null,
                  "role": "user"
                },
                "errors": {
                  "password": [
                    "can't be blank"
                  ],
                  "email": [
                    "is not an email",
                    "is invalid"
                  ],
                  "full_messages": [
                    "Password can't be blank",
                    "Email is not an email",
                    "Email is invalid"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/auth/sign_in": {
      "post": {
        "summary": "Creates a new session",
        "tags": [
          "Session"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "session created",
            "examples": {
              "application/json": {
                "data": {
                  "id": 2,
                  "email": "test@gmail.com",
                  "provider": "email",
                  "uid": "test@gmail.com",
                  "allow_password_change": false,
                  "role": "user"
                }
              }
            }
          },
          "401": {
            "description": "unauthorized",
            "examples": {
              "application/json": {
                "success": false,
                "errors": [
                  "Invalid login credentials. Please try again."
                ]
              }
            }
          }
        }
      }
    }
  }
}